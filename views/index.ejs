<%- include('./partials/header.ejs') %>
    <h1 id="index-h1"><%=user.username%>'s Library</h1>
    <ul>
        <% for(let i = 0; i < allBooks.length; i++) { %>
            <% if(allBooks[i].username == user.username) { %>
            <li class="card">
                <a href="/mylibrary/<%=allBooks[i].id%>" class="card-link card-header">
                    <%=allBooks[i].title%> 
                    <h6 class="card-subtitle text-muted">By <%=allBooks[i].author%></h6>
                </a>
                <!-- <img src="https://covers.openlibrary.org/b/isbn/<%=allBooks[i].isbn%>-M.jpg" alt=""/> -->
                <img src="https://pictures.abebooks.com/isbn/<%=allBooks[i].isbn%>-us-300.jpg" alt="book cover">
            </li>
            <% } %> 
        <% } %> 
    </ul>
</body>
</html>